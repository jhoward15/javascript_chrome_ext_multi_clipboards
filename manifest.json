{
  "manifest_version": 3,
  "name": "Alternate Clipboard",
  "version": "1.0.15",
  "description": "A Chrome extension that creates a temporary storage location for copied text and allows for hotkey configuration.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["clipboardWrite", "clipboardRead", "commands", "tabs", "storage", "scripting"],
  "host_permissions": ["*://*/*", "<all_urls>"],
  "commands": {
    "copy1": {
      "suggested_key": {
        "default": "Ctrl+1"
      },
      "description": "Copy selected text to alternate clipboard 1"
    },
    "copy2": {
      "suggested_key": {
        "default": "Ctrl+2"
      },
      "description": "Copy selected text to alternate clipboard 2"
    },
    "paste1": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Paste text from alternate clipboard 2"
    },
    "paste2": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Paste text from alternate clipboard 2"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
